<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchlist_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/menu_title_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/page_popular_topbar" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/dropdown_foldout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_title_iv"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/dropdown_alt0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/page_topmuse_b_btn" />

            <ImageView
                android:id="@+id/dropdown_alt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/page_new_b_btn" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>