<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/litegray"
    android:orientation="vertical" >

    <com.museda.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 정보" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/noti_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="공지사항" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/center_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:autoLink="email"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="뮤즈다 고객센터" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/help_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="도움말" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/version_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="버전 정보" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/intro_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="인트로영상 보기" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/account_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="계정" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개발 관련" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/helper_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="도움을 준 사람" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/library_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="사용한 라이브러리" />

</LinearLayout>