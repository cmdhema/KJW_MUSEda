<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/musesearch_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/musesearch_heartnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="52dp"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="27sp" />

    <ImageView
        android:id="@+id/musesearch_heartcount_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@id/musesearch_heartnum_tv" />

    <RelativeLayout
        android:id="@+id/infolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/belowbar"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom" >

        <ProgressBar
            android:id="@+id/progress2"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <com.museda.util.views.RoundedImageView
            android:id="@+id/musesearch_porfile_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/musesearch_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/musesearch_porfile_iv"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/musesearch_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musesearch_name_tv"
            android:layout_toRightOf="@id/musesearch_porfile_iv"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/musesearch_pasttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musesearch_id_tv"
            android:layout_toRightOf="@id/musesearch_porfile_iv"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/musesearch_heart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btn_whiteheart_selector"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/left_selector" />

    <ImageView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/right_selector" />

    <ImageView
        android:id="@+id/musesearch_search_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>